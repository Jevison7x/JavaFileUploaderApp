<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.xyneex.util.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ImageUploadServlet</servlet-name>
        <servlet-class>com.xyneex.uploads.images.ImageUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MoveImageServlet</servlet-name>
        <servlet-class>com.xyneex.uploads.images.MoveImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VideoUploadServlet</servlet-name>
        <servlet-class>com.xyneex.uploads.videos.VideoUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MoveVideoServlet</servlet-name>
        <servlet-class>com.xyneex.uploads.videos.MoveVideoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CropperImageUploaderServlet</servlet-name>
        <servlet-class>com.xyneex.uploads.images.CropperImageUploaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageUploadServlet</servlet-name>
        <url-pattern>/image-uploader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoveImageServlet</servlet-name>
        <url-pattern>/move-image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VideoUploadServlet</servlet-name>
        <url-pattern>/video-uploader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoveVideoServlet</servlet-name>
        <url-pattern>/move-video</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CropperImageUploaderServlet</servlet-name>
        <url-pattern>/cropper-uploader</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
